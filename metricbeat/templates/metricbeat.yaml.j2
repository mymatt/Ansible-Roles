
metricbeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: true
  reload.period: 10s

#setup.dashboards.enabled: true

setup.kibana:
  host: "{{ kibana_site }}"

output.elasticsearch:
  hosts: ["{{ elasticsearch_site }}"]

logging.level: debug
logging.to_files: true
logging.files:
  path: /var/log/metricbeat
  name: metricbeat
  keepfiles: 7
  permissions: 0644

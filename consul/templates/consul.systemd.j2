[Unit]
Description="Consul Agent"
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/tmp/consul.d/config.json

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/consul agent -config-dir=/tmp/consul.d/
ExecReload=/usr/local/bin/consul reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
